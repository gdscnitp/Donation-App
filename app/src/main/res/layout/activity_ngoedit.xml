<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NGOEditActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_status_bar"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_ngoedit">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/back_button"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO Edit Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:paddingTop="8dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ngo_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/linear_layout_ngoedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_pic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ngo_profile_pic_add"
        android:layout_below="@id/ngo_profile_pic"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="-24dp"
        android:layout_toRightOf="@id/ngo_profile_pic"
        android:src="@drawable/ic_pic_add_button" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_edit_box"
        android:layout_below="@id/ngo_profile_pic"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:hint="Name"
        android:gravity="top"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_name_edit"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ngo_description_edit_box"
        android:layout_below="@id/name_edit_box"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Description"
        android:elevation="10dp"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_description_edit"
            android:background="@color/white"
            android:gravity="top"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ngo_address_edit_box"
        android:layout_below="@id/ngo_description_edit_box"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:hint="Address"
        android:gravity="top"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_address_edit"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ngo_contact_edit_box"
        android:layout_below="@id/ngo_address_edit_box"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:hint="Contact"
        android:gravity="top"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_contact_name_edit"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ngo_email_edit_box"
        android:layout_below="@id/ngo_contact_edit_box"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:hint="Email"
        android:gravity="top"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_email_edit"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ngo_password_edit_box"
        android:layout_below="@id/ngo_email_edit_box"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:hint="Password"
        android:gravity="top"
        android:background="@drawable/background_ngo_edit_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ngo_password_edit"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_password_logo"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/primary_red"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/ngo_edit_save"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/background_signup_page_email_password"
        android:backgroundTint="@color/primary_red"
        android:layout_below="@id/ngo_password_edit_box"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>