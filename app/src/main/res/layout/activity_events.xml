<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EventsActivity">

    <RelativeLayout
        android:id="@+id/StatusBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_red" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photo"
        android:layout_below="@id/StatusBar"
        android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_avatar1" />

        <ImageView
            android:id="@+id/profile_pic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_pic"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-24dp"
            android:layout_toRightOf="@id/profile_pic"
            android:src="@drawable/ic_plus_vector" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_edit_box"
            android:hint="Event Title"
            android:gravity="top"
            android:background="@drawable/rectangle_1"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_edit"
                android:textSize="20dp"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/rectangle_1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingLeft="8sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/description_edit_box"
            android:hint="Description"
            android:gravity="top"
            android:background="@drawable/rectangle_1"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_edit"
                android:textSize="20dp"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/rectangle_1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textMultiLine"
                android:paddingLeft="8sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time"
                android:textSize="20dp"
                android:paddingLeft="8sp"
                android:fontFamily="@font/poppins_regular"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:textSize="20dp"
                android:paddingLeft="8sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:id="@+id/time_edit_box"
                android:onClick="popTimePicker"
                android:gravity="top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_edit"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_1"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="8sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/date_edit_box"
                android:layout_marginTop="-12dp"
                android:gravity="top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_edit"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_1"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="8sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_edit_box"
            android:hint="Address"
            android:gravity="top"
            android:background="@drawable/rectangle_1"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_edit"
                android:textSize="20dp"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/rectangle_1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textMultiLine"
                android:paddingLeft="8sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_edit_box"
            android:hint="Contact Details"
            android:gravity="top"
            android:background="@drawable/rectangle_1"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_edit"
                android:textSize="20dp"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/rectangle_1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="phone"
                android:paddingLeft="8sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_edit_box"
            android:hint="Email"
            android:gravity="top"
            android:background="@drawable/rectangle_1"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_edit"
                android:textSize="20dp"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/rectangle_1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress"
                android:paddingLeft="8sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/submit"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_6"
            android:layout_gravity="center"/>



    </LinearLayout>

</RelativeLayout>