<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileUserActivity">

    <ImageView
        android:id="@+id/status_bar_useredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/status_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_profileuser">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/back_button_profileuser"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:paddingTop="8dp"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/user_profile_pic"
        android:src="@drawable/profile_avatar1"
        android:layout_below="@id/linear_layout_profileuser"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/border_view_userprofile"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/user_profile_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#E5E5E5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_black_24dp_1"
        android:layout_below="@id/border_view_userprofile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_heading_userprofile"
        android:text="Name"
        android:textSize="15sp"
        android:layout_below="@id/border_view_userprofile"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/name_userprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_heading_userprofile"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sujit Kumar Das"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_icon_userProfile"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_below="@id/border_view_userprofile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_textview_profile"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_alignLeft="@id/edit_icon_userProfile"
        android:layout_below="@id/border_view_userprofile"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_userprofile"
        android:text="Male"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_below="@id/name_userprofile"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age_userprofile"
        android:text="20"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_below="@id/name_userprofile"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_black_24dp_1"
        android:layout_below="@id/gender_userprofile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_heading_userprofile"
        android:text="Contact"
        android:textSize="15sp"
        android:layout_below="@id/gender_userprofile"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_userprofile"
        android:text="1234567890"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/contact_heading_userprofile"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email_black_24dp_1"
        android:layout_below="@id/contact_userprofile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_heading_userprofile"
        android:text="Email"
        android:textSize="15sp"
        android:layout_below="@id/contact_userprofile"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_userprofile"
        android:text="sujitd.ug20.ece@nitp.ac.in"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/email_heading_userprofile"
        android:layout_marginLeft="80dp"/>






</RelativeLayout>